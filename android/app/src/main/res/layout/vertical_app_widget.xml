<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Android.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:theme="@style/Theme.Android.AppWidgetContainer">

    <TextView android:id="@+id/appwidget_text1"
        style="@style/Widget.Android.AppWidget.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text1"
        android:text="@string/appwidget_text1"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView android:id="@+id/appwidget_text2"
        style="@style/Widget.Android.AppWidget.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text2"
        android:text="@string/appwidget_text2"
        android:textSize="24sp"
        android:textStyle="bold|italic" />
</LinearLayout>